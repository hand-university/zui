{
  "name": "zui",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@10.14.0",
  "description": "Hand University UI Components",
  "author": "Cyole <i@cyole.me>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/hand-university",
  "homepage": "https://github.com/hand-university/zui#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hand-university/zui.git"
  },
  "bugs": {
    "url": "https://github.com/hand-university/zui/issues"
  },
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://developer-center.wxhand.com/verdaccio/"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsdown",
    "dev": "pnpm -C playground dev",
    "test": "vitest",
    "test:ui": "vitest --ui --coverage.enabled=true",
    "test:coverage": "vitest run --coverage",
    "typecheck": "vue-tsc --noEmit",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build",
    "prepare": "simple-git-hooks"
  },
  "peerDependencies": {
    "ant-design-vue": "^4.2.0",
    "vue": "^3.0.0"
  },
  "dependencies": {
    "@css-render/plugin-bem": "^0.15.14",
    "css-render": "^0.15.14",
    "jss": "^10.10.0",
    "jss-plugin-camel-case": "^10.10.0",
    "jss-preset-default": "^10.10.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.2.1",
    "@antfu/ni": "^25.0.0",
    "@types/node": "^24.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue-styled-components/core": "^1.13.2",
    "@vue/test-utils": "^2.4.6",
    "bumpp": "^10.2.3",
    "eslint": "^9.33.0",
    "happy-dom": "^18.0.1",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.14.1",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "unplugin-vue": "^7.0.1",
    "unplugin-vue-jsx": "^0.6.1",
    "vite": "^7.1.2",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.0.5"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
