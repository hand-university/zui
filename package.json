{
  "name": "zui",
  "type": "module",
  "version": "0.0.0",
  "packageManager": "pnpm@10.16.1",
  "description": "Hand University UI Components",
  "author": "Cyole <i@cyole.me>",
  "license": "MIT",
  "funding": "https://github.com/sponsors/hand-university",
  "homepage": "https://github.com/hand-university/zui#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hand-university/zui.git"
  },
  "bugs": {
    "url": "https://github.com/hand-university/zui/issues"
  },
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "build": "tsdown",
    "build:docs": "pnpm -C docs build",
    "dev": "pnpm -C docs dev",
    "play": "pnpm -C playground dev",
    "test": "vitest",
    "test:ui": "vitest --ui --coverage.enabled=true",
    "test:coverage": "vitest run --coverage",
    "typecheck": "vue-tsc --noEmit",
    "release": "bumpp && pnpm publish",
    "prepublishOnly": "pnpm run build",
    "prepare": "simple-git-hooks",
    "up": "taze major -r -I"
  },
  "peerDependencies": {
    "ant-design-vue": "^4.2.0",
    "vue": "^3.0.0"
  },
  "dependencies": {
    "@zui/icons": "workspace:*",
    "jss": "^10.10.0",
    "jss-plugin-camel-case": "^10.10.0",
    "jss-plugin-compose": "^10.10.0",
    "jss-plugin-default-unit": "^10.10.0",
    "jss-plugin-expand": "^10.10.0",
    "jss-plugin-extend": "^10.10.0",
    "jss-plugin-global": "^10.10.0",
    "jss-plugin-nested": "^10.10.0",
    "jss-plugin-props-sort": "^10.10.0",
    "jss-plugin-rule-value-function": "^10.10.0",
    "jss-preset-default": "^10.10.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.3.0",
    "@antfu/ni": "^25.0.0",
    "@iconify/tools": "^4.1.3",
    "@iconify/vue": "^5.0.0",
    "@types/node": "^24.5.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/compiler-sfc": "^3.5.21",
    "@vue/test-utils": "^2.4.6",
    "@vueuse/core": "^13.9.0",
    "ansis": "^4.1.0",
    "bumpp": "^10.2.3",
    "es-toolkit": "^1.39.10",
    "eslint": "^9.35.0",
    "eslint-plugin-format": "^1.0.1",
    "fast-glob": "^3.3.3",
    "happy-dom": "^18.0.1",
    "simple-git-hooks": "^2.13.1",
    "taze": "^19.6.0",
    "tsdown": "^0.15.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "unocss": "^66.5.1",
    "unplugin-vue": "^7.0.1",
    "unplugin-vue-jsx": "^0.8.0",
    "vite": "^7.1.5",
    "vitest": "^3.2.4",
    "vue": "^3.5.21",
    "vue-component-meta": "^3.0.7",
    "vue-tsc": "^3.0.7"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
